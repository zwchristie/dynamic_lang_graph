# Local Environment Configuration
ENVIRONMENT=local

# Provider selection
PROVIDER=openai

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Bedrock
BEDROCK_REGION=us-east-1
BEDROCK_ACCESS_KEY=your_aws_access_key
BEDROCK_SECRET_KEY=your_aws_secret_key
BEDROCK_LLM_MODEL_ID=your-bedrock-llm-model-id
BEDROCK_EMBEDDING_MODEL_ID=your-bedrock-embedding-model-id

# Database
DATABASE_URL=sqlite:///./app.db

# App
APP_NAME=Agentic Workflow System (Local)
DEBUG=True
MAX_ITERATIONS=10

# Server settings (no SSL for local)
HOST=127.0.0.1
PORT=8000

# SSL settings (not used in local)
SSL_CERT_FILE=
SSL_KEY_FILE= 